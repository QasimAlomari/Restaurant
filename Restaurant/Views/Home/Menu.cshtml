@model Restaurant.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Menu";
    ViewBag.ViewName = "Menu";
}

@if (Model.SystemSetting != null)
{
    <div class="breadcrumb-area bg-img ptb-80" style="background-image:url(@(string.IsNullOrEmpty(Model.SystemSetting.SystemSettingWelcomeNoteImageUrl)?"":"/images/systemsetting/"+Model.SystemSetting.SystemSettingWelcomeNoteImageUrl));">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h3>menu</h3>
                <ul>
                    <li>
                        <a href="@(string.IsNullOrEmpty(Model.SystemSetting.SystemSettingWelcomeNoteUrl)?"#":Model.SystemSetting.SystemSettingWelcomeNoteUrl)">Home</a>
                    </li>
                    <li class="active">menu page</li>
                </ul>
            </div>
        </div>
    </div>
}

@if (Model.MasterCategoryMenuList.Count != 0 && Model.MasterItemMenuList.Count != 0)
{
    <div class="product-menu-area pt-100 pb-70 gray-bg">
        <div class="container">
            <div class="section-title text-center mb-50">
                <h2>Our Food Menu</h2>
                <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
            </div>
            <div class="menu-tab-wrap mb-50">
                <div class="menu-tab-list nav text-center">
                    <a class="active" href="#tab1" data-bs-toggle="tab">
                        All item
                    </a>
                    @for (int i = 0; i < Model.MasterCategoryMenuList.Count; i++)
                    {
                        <a href="@("#tab" + (i+2))" data-bs-toggle="tab">
                            @Model.MasterCategoryMenuList[i].MasterCategoryMenuName
                        </a>
                    }
                </div>
            </div>
            <div class="tab-content jump">
                <div id="tab1" class="tab-pane active">
                    <div class="row">
                        @foreach (var item in Model.MasterItemMenuList)
                        {
                            <div class="col-lg-6">
                                <div class="single-menu-product mb-30">
                                    <div class="menu-product-img">
                                        <img alt="" src="~/images/item/@item.MasterItemMenuImageUrl" width="100" height="100">
                                    </div>
                                    <div class="menu-product-content">
                                        <div class="menu-title-price">
                                            <div class="menu-title">
                                                <h4>
                                                    @item.MasterItemMenuTitle
                                                </h4>
                                            </div>
                                            <div class="menu-price">
                                                <span>@item.MasterItemMenuPrice JOD</span>
                                            </div>
                                        </div>
                                        <p>Category: @item.MasterCategoryMenu.MasterCategoryMenuName</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                @for (int i = 0; i < Model.MasterCategoryMenuList.Count; i++)
                {
                    <div id="@("tab" + (i+2))" class="tab-pane">
                        <div class="row">
                            @foreach (var item in Model.MasterItemMenuList.Where(data => data.MasterCategoryMenuId == Model.MasterCategoryMenuList[i].MasterCategoryMenuId))
                            {
                                <div class="col-lg-6">
                                    <div class="single-menu-product mb-30">
                                        <div class="menu-product-img">
                                            <img alt="" src="~/images/item/@item.MasterItemMenuImageUrl" width="100" height="100">
                                        </div>
                                        <div class="menu-product-content">
                                            <div class="menu-title-price">
                                                <div class="menu-title">
                                                    <h4>
                                                        @item.MasterItemMenuTitle
                                                    </h4>
                                                </div>
                                                <div class="menu-price">
                                                    <span>@item.MasterItemMenuPrice JOD</span>
                                                </div>
                                            </div>
                                            <p>Category: @item.MasterCategoryMenu.MasterCategoryMenuName</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@if (Model.MasterPartnerList.Count != 0)
{
    <div class="brand-logo-area ptb-100">
        <div class="container">
            <div class="brand-logo-active owl-carousel">
                @foreach (var item in Model.MasterPartnerList)
                {
                    <div class="single-brand-logo">
                        <a target="_blank" href="@item.MasterPartnerWebsiteUrl"><img alt="" src="~/images/partner/@item.MasterPartnerLogoImageUrl"></a>
                    </div>
                }
            </div>
        </div>
    </div>
}
